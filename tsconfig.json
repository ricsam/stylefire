{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "target": "es5",
    "rootDir": "src",
    "lib": ["es5", "es6", "dom"],
    "outDir": "lib/",
    "watch": false,
    "baseUrl": "src/",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/_tests"]
}
